import 'package:flutter/material.dart';
import 'package:to_do/core/util/widgets/listviewpage.dart';
import 'package:to_do/core/util/widgets/mybutton.dart';
import 'package:to_do/features/addtask/addtaskpage.dart';

class OnBoardWidget extends StatefulWidget{
  const OnBoardWidget({Key? key}) : super(key: key);

  @override
  _OnBoardWidget createState() => _OnBoardWidget();
}
class _OnBoardWidget extends State<OnBoardWidget> {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
        appBar : AppBar( title : Text('Board',style: TextStyle(fontSize: 18,
              fontWeight: FontWeight.bold)),
          actions: <Widget>[
        IconButton( icon: Icon( Icons.date_range,color: Colors.white,   ),
        onPressed : (){  Navigator.push(context, MaterialPageRoute(
            builder: (context) =>  AddTaskPage(), ),   );
        }
        ),],),

        body: Container (
            margin: EdgeInsets.all(30.0),
            child: SingleChildScrollView(
          child: Column(  children: <Widget>[
              _tabSection(context),
              MyButton(text : 'Add a Task',
                onClick : () {
                  Navigator.push(  context,MaterialPageRoute(
                      builder: (context) =>  AddTaskPage(),),);
                },
              ),
            ],
          ),
        )));
  }
}
Widget _tabSection(BuildContext context) {
  return DefaultTabController(
    length: 4,
    child: Column(
      mainAxisSize: MainAxisSize.min,
      children: <Widget>[
        Container(
          child: TabBar(tabs: [
            Tab (text : 'All'),
            Tab (text : 'Completed'),
            Tab (text : 'UnCompleted'),
            Tab (text : 'Favorite'),
          ],   labelColor: Colors.black,
              unselectedLabelColor: Colors.grey,),    ),
        Container(height: MediaQuery.of(context).size.height,
          child: TabBarView(children: [  const  ListViewPage(),
            Container(child: Text("2"),),
            Container(child: Text("3"),),
            Container(child: Text("4"),),
          ]),
        ),
      ],
    ),
  );
}



